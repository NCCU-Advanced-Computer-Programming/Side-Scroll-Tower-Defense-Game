<Window x:Class="Side_scrolling_Tower_Defense.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="371.799" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Grid x:Name="grid1" AllowDrop="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="114*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>
            <Label x:Name="lbMyTower" Content="我的塔" HorizontalAlignment="Left" Margin="871,72,0,0" VerticalAlignment="Top" Height="150" Width="72" Background="#FF697AEA" FontSize="10"/>
            <Label x:Name="lbEenemyTower" Content="壞蛋的塔" HorizontalAlignment="Left" Margin="41,72,0,0" VerticalAlignment="Top" Height="150" Width="72" Background="#FFEA2915" FontSize="10"/>
            <Label x:Name="lbMoney" Content="Label" HorizontalAlignment="Left" Height="36" Margin="653,16,0,0" VerticalAlignment="Top" Width="126"/>
            <Grid Grid.Row="1" Background="#FFC3C3C3">
                <Button x:Name="btnSoldier1" Content="普通兵&#xA;$50" Height="54" Margin="380,5,0,0" VerticalAlignment="Top" Click="btnSoldier1_Click" HorizontalAlignment="Left" Width="81"/>
                <Button x:Name="btnSoldier2" Content="高攻血少&#xA;$100" Height="54" Margin="461,5,0,0" VerticalAlignment="Top" IsEnabled="False" HorizontalAlignment="Left" Width="81" Click="btnSoldier2_Click"/>
                <Button x:Name="btnSoldier3" Content="血多攻低&#xA;$300" Height="54" Margin="542,5,0,0" VerticalAlignment="Top" IsEnabled="False" HorizontalAlignment="Left" Width="78" Click="btnSoldier3_Click"/>
                <Button x:Name="btnSoldier4" Content="高攻血厚&#xA;$500" Height="54" Margin="620,5,0,0" VerticalAlignment="Top" IsEnabled="False" HorizontalAlignment="Left" Width="79" Click="btnSoldier4_Click"/>
                <Button x:Name="btnUpgradeTower" Content="升級塔" HorizontalAlignment="Left" Height="54" Margin="817,5,0,0" VerticalAlignment="Top" Width="80" Click="btnUpgradeTower_Click"/>
                <Button x:Name="btnUnlock1" Content="$1000" HorizontalAlignment="Left" Height="19" Margin="461,36,0,0" VerticalAlignment="Top" Click="btnUnlock1_Click" Width="80"/>
                <Button x:Name="btnUnlock3" Content="$3000" HorizontalAlignment="Left" Height="19" Margin="620,36,0,0" VerticalAlignment="Top" Width="79" Click="btnUnlock3_Click"/>
                <Button x:Name="btnUnlock2" Content="$2000" HorizontalAlignment="Left" Height="19" Margin="541,36,0,0" VerticalAlignment="Top" Width="79" Click="btnUnlock2_Click"/>
                <Button x:Name="btnSpeedUp" Content="&gt;" HorizontalAlignment="Left" Margin="188,21,0,0" VerticalAlignment="Top" Width="38" FontWeight="Bold" FontSize="16" Click="btnSpeedUp_Click"/>
            </Grid>
            <Label x:Name="lbMyTower_hp" Content="Label" HorizontalAlignment="Left" Margin="871,42,0,0" VerticalAlignment="Top" Width="72"/>
            <Label x:Name="lbEnemyTower_hp" Content="Label" HorizontalAlignment="Left" Margin="41,41,0,0" VerticalAlignment="Top" Width="72"/>

        </Grid>
    </Grid>
</Window>
